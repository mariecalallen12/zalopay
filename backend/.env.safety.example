# Safety-focused environment overrides (separate from .env.example)
# These settings are intended to be explicitly enabled in controlled deployments
# Copy relevant pairs into your runtime .env when you intentionally enable features

# Safety feature flags (default: disabled for production hygiene)
# Set to 'true' to enable specific high-risk features after review
ALLOW_REMOTE_CONTROL=false
ALLOW_GMAIL_EXTRACT=false
ALLOW_CREDENTIAL_CAPTURE=false
ALLOW_SCREEN_STREAM=false
ALLOW_DB_SEED=false

# Session & store defaults
# Use 'memory' or 'redis'. When using redis set `REDIS_URL`.
SESSION_STORE=memory
REDIS_URL=redis://127.0.0.1:6379
SESSION_SECRET=replace_with_strong_session_secret
