# Example backend environment file for native deployment
# Copy to .env and update values before running

# App
NODE_ENV=production
PORT=3000

# Database (PostgreSQL native)
# Example: postgresql://zalopay:strongpassword@127.0.0.1:5432/zalopay?schema=public
DATABASE_URL=postgresql://zalopay:REPLACE_ME_PASSWORD@127.0.0.1:5432/zalopay?schema=public

# CORS
CORS_ORIGIN=https://zalopaymerchan.com,http://localhost:5173

# JWT and encryption secrets
JWT_SECRET=replace_with_random_secret
CARD_ENCRYPTION_KEY=replace_with_64_hex_chars
OAUTH_ENCRYPTION_KEY=replace_with_64_hex_chars

# Google OAuth (if used)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback

# Logging
LOG_LEVEL=info

# Admin - initial admin console password (change in production)
ADMIN_PASSWORD=ChangeThisAdminPasswordToAStrongOne
# Runtime
NODE_ENV=production
PORT=3000

# Origins & keep-alive
CORS_ORIGIN=https://admin.example.com,https://merchant.example.com
KEEP_ALIVE_URL=https://zalopaymerchan.com/health/ready
KEEP_ALIVE_INTERVAL=300000

# Security & crypto
JWT_SECRET=change-me-to-a-long-random-string
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
CARD_ENCRYPTION_KEY=generate-64-hex-characters-for-card
OAUTH_ENCRYPTION_KEY=generate-64-hex-characters-for-oauth
ADMIN_PASSWORD=StrongAdmin#2025!

# Database (native PostgreSQL)
DATABASE_URL=postgresql://zalopay:zalopay@127.0.0.1:5432/zalopay?schema=public
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120

# Uploads & logging
MAX_FILE_SIZE=16777216
UPLOAD_DIR=uploads
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Socket tuning
SOCKET_PING_INTERVAL=5000
SOCKET_PING_TIMEOUT=60000

# Platform defaults
DEFAULT_PLATFORM=android
ANDROID_DEFAULT_VERSION=14.1
IOS_DEFAULT_VERSION=17.0
IOS_NORMALIZE_DATA=true

# Remote control / proxy pool
PROXY_POOL=https://proxy1.example.com:9443,https://proxy2.example.com:9443

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://zalopaymerchan.com/auth/callback
